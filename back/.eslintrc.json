{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "./node_modules/eslint-config-airbnb-base/index.js"
  ],
  "rules": {
    "array-bracket-spacing": [
      2,
      "never"
    ],
    "block-scoped-var": 2,
    "brace-style": [
      2,
      "1tbs"
    ],
    "camelcase": 0,
    "comma-dangle": 0,
    "computed-property-spacing": [
      2,
      "never"
    ],
    "curly": 2,
    "eol-last": 0,
    "eqeqeq": [
      2,
      "smart"
    ],
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "max-depth": [
      1,
      3
    ],
    "max-len": [
      1,
      150
    ],
    "max-statements": [
      1,
      15
    ],
    "new-cap": 0,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-unused-vars": 1,
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true
      }
    ],
    "object-curly-spacing": [
      2,
      "never"
    ],
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "semi": [
      2,
      "always"
    ],
    "space-unary-ops": 2,
    "strict": 0,
    "no-param-reassign": "off"
  }
}
